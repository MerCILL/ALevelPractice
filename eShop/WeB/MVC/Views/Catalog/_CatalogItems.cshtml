@model IEnumerable<CatalogItemViewModel>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="~/js/pagination.js"></script>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card border-0">
                <img class="card-img-top" src="@item.PictureUrl" alt="Should be card image" />
                <div class="card-body">
                    <h6 class="card-title">Title: @item.Name</h6>
                    <p class="card-text">Price: @item.Price</p>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Catalog", new { pageIndex = ViewBag.PageIndex - 1, pageSize = ViewBag.PageSize })"><i class="fas fa-arrow-left"></i></a>
        </li>
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.PageIndex || Math.Abs(ViewBag.PageIndex - i) <= 2 || i == 1 || i == ViewBag.TotalPages)
            {
                <li class="page-item @(i == ViewBag.PageIndex ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Catalog", new { pageIndex = i, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }
            else if (i == ViewBag.PageIndex + 3 || i == ViewBag.PageIndex - 3)
            {
                <li class="page-item disabled">
                    <a class="page-link">...</a>
                </li>
            }
        }
        <li class="page-item @(ViewBag.PageIndex == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", "Catalog", new { pageIndex = ViewBag.PageIndex + 1, pageSize = ViewBag.PageSize })"><i class="fas fa-arrow-right"></i></a>
        </li>
    </ul>
</nav>